@model PTPBD.Models.Expediente
@{
    ViewBag.Title = "AsignarTerapeuta";
}

<h2>AsignarTerapeuta</h2>

@using (Html.BeginForm("AsignarTerapeuta", "Expediente", FormMethod.Post, new { role = "form", @class = "" }))
{
    @Html.HiddenFor(model => model.Id_Expediente)
    @Html.AntiForgeryToken()
    
    <span class="formulario-titulo">Asignar terapeuta:</span>
    @Html.DropDownList("FK_Id_Terapeuta", null, htmlAttributes: new { @class = "form-control" })
    <div>
        <input type="submit" class="btn-save" value="Guardar" />
    </div>
}

